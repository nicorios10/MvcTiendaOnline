@model IEnumerable<TiendaOnlineMvc.Models.Category>

@{
    ViewBag.Title = "Index";
}
<div class="container">
    <br />
    <div class="col-md-12">
        <ul class="breadcrumb">
            <li>
                <a>@Html.ActionLink("Inicio", "Index", "Home")</a>
            </li>
            <li>Administrar Categorias</li>
        </ul>
    </div>
    <hr />
    <h2>Categorias</h2>

    <p>
        @Html.ActionLink("Crear nueva Categoria", "Create")
    </p>
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="btn-group">
                    <button class="btn btn-secondary">@Html.ActionLink("Edit", "Edit", new { id = item.Id })</button>
                    <button class="btn btn-secondary">@Html.ActionLink("Details", "Details", new { id = item.Id })</button>
                    <button class="btn btn-secondary">@Html.ActionLink("Delete", "Delete", new { id = item.Id })</button>
                </td>
            </tr>
        }

    </table>
</div>

